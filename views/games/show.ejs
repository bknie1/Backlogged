<%- include("../partials/header") %>

	<div class="container my-5">
		<div class="row">
			<div class="col-sm-12 col-md-8 order-sm-last order-md-first">
				<h3>
					<%= ViewModel.title %> (<%= ViewModel.year %>)
				</h3>
				<h5>
					<%= ViewModel.system %>
				</h5>
				<h6>
					<% ViewModel.tags.forEach((t) => { %>
						<%= t.name + " " %>
							<% }) %>
				</h6>
				<h7>
					Submitted by <%= ViewModel.author.username %>
				</h7>
				<p class="my-3">
					<%= ViewModel.description %>
				</p>
				<a href="/games/<%= ViewModel._id %>/edit" class="btn btn-primary">Edit Game</a>
			</div>
			<div class="col-sm-12 col-md-4 order-sm-first order-md-last text-md-right">
				<img src="<%= ViewModel.image %>" class="game-art img-fluid" alt="Game Art">
			</div>
		</div>

		<div class="my-5">
			<div class="text-right">
				<a href="/games/<%= ViewModel._id %>/comments/new" class="btn btn-primary btn-md">Add a Comment</a>
			</div>
			<% ViewModel.comments.reverse().forEach((c) => { %>
				<div class="card my-3">
					<div class="card-header">
						<span class="font-weight-bold"><%= c.author.username %></span> says
					</div>
					<div class="card-body font-italic">
							"<%= c.text %>"
					</div>
				</div>
			<% }); %>
		</div>

	</div>

	<%- include("../partials/footer") %>