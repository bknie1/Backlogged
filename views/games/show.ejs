<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-8">
			<h3>
				<%= ViewModel.title %>
			</h3>
			<h4>
				(<%= ViewModel.system %>)
			</h4>
			<h5>
				<% ViewModel.tags.forEach((t) => { %>
					<%= t.name + " " %>
				<% }) %>
			</h5>
			<p>
				<%= ViewModel.description %>
			</p>
		</div>
		<div class="col-sm-12 col-md-4">
			<img src="<%= ViewModel.image %>" class="game-art img-fluid" alt="Game Art">
		</div>
	</div>
	<div class="row my-3 mx-1">
		<!-- <a href="/games/<%= ViewModel._id %>/comments/new" class="btn btn-primary btn-lg">Add Comment</a> -->
		<%- include("../partials/comments/new") %>
	</div>
	
<% ViewModel.comments.reverse().forEach((c) => { %>
	<div class="row my-3">
		<div class="col">
			<blockquote class="blockquote">
			  <p class="mb-0"><%= c.text %></p>
			  <footer class="blockquote-footer"><%= c.author %></footer>
			</blockquote>
		</div>
	</div>
<% }); %>
</div>

<%- include("../partials/footer") %>