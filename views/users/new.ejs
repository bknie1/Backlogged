<%- include("../partials/header") %>

	<div class="container my-5">
		<h3 class="my-3">
			Register
		</h3>

		<div class="row">
			<div class="col col-sm-12 col-md-6 order-md-first order-sm-last">
				<form method="POST" action="/register">
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text" id="inputGroup-sizing-default">Username</span>
						</div>
						<input type="text" name="username" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text" id="inputGroup-sizing-default">Password</span>
						</div>
						<input type="password" name="password" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
					</div>
					<button class="btn btn-primary">
						Sign Up
					</button>
				</form>

			</div>
			<div class="col col-sm-12 col-md-6 order-md-first order-sm-first">
				<h5>
					Why sign up?
				</h5>

				<p class="lead">
					Signing in allows you to post comments and add games.
				</p>
				<h5>
					Have an account?
				</h5>
				<p class="lead">
					<a href="/login" class="btn btn-secondary btn-md">Sign In</a>
				</p>
			</div>
		</div>

	</div>

	<%- include("../partials/footer") %>