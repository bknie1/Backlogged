<%- include("../partials/header") %>
	<div class="container my-5">		
		<h3 class="my-3">
			Sign In
		</h3>
		<div class="row">
			<div class="col col-sm-12 col-md-6 order-md-1 order-sm-2">
				<form method="POST" action="/login">
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text" id="inputGroup-sizing-default">Username</span>
						</div>
						<input type="text" name="username" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text" id="inputGroup-sizing-default">Password</span>
						</div>
						<input type="password" name="password" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
					</div>
					<button class="btn btn-primary">
						Sign In
					</button>
				</form>

			</div>
			<div class="col col-sm-12 col-md-6 order-md-2 order-sm-1">
				<h5>
					Why sign in?
				</h5>
				<p class="lead">
					Signing in allows you to post comments and add games.
				</p>
				<h5>
					Need an account?
				</h5>
				<p class="lead">
					<a href="/register" class="btn btn-secondary btn-md">Sign Up</a>
				</p>
			</div>
		</div>

	</div>

	<%- include("../partials/footer") %>